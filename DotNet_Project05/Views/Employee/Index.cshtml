@model IEnumerable<DotNet_Project05.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-dark text-center">Employee List</h2>

<p>@Html.ActionLink("Create New", "Create", "Employee", new { @class = "btn btn-success" }) </p>

@if (Model.Any() == false)
{
    <h1>No Record Found</h1>
}

else
{
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            // using (Html.BeginForm("Delete_Rec", "Employee", new { id = item.EmployeeId }))
            //{
            <tr>

                <td> @Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId })   |  @Html.ActionLink("Details", "Details", new { id = item.EmployeeId })  |  @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId })
                    @*<input type="submit" value="Delete_Rec" class="btn btn-link" onclick="return confirm('Want To Delete Data ?')" />*@
                </td>

            </tr>
            // }

        }
    </table>
}